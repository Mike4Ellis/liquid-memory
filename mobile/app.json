{
  "expo": {
    "name": "Liquid Memory",
    "slug": "liquid-memory-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "backgroundColor": "#0a0a0f",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0a0a0f"
    },
    "scheme": "liquidmemory",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mike4ellis.liquidmemory",
      "infoPlist": {
        "NSCameraUsageDescription": "Liquid Memory needs camera access to capture and analyze images.",
        "NSPhotoLibraryUsageDescription": "Liquid Memory needs photo library access to import images for analysis.",
        "NSPhotoLibraryAddUsageDescription": "Liquid Memory needs permission to save generated images to your library.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": ["liquidmemory"]
          }
        ]
      }
    },
    "android": {
      "package": "com.mike4ellis.liquidmemory",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0a0a0f"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "liquidmemory"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        },
        {
          "action": "SEND",
          "data": [
            {
              "mimeType": "image/*"
            }
          ],
          "category": ["DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-camera",
      "expo-image-picker",
      "expo-media-library"
    ]
  }
}
